# ============================================
# CARINHO DOCUMENTOS LGPD - Variáveis de Ambiente
# ============================================

# --------------------------------------------
# Aplicação
# --------------------------------------------
APP_NAME="Carinho Documentos LGPD"
APP_ENV=production
APP_KEY=
APP_DEBUG=true
APP_URL=https://documentos.carinho.com.vc
APP_TIMEZONE=America/Sao_Paulo
APP_LOCALE=pt_BR

# --------------------------------------------
# Banco de Dados
# --------------------------------------------
DB_CONNECTION=mysql
DB_HOST=
DB_PORT=3306
DB_DATABASE=carinho_documentos_lgpd
DB_USERNAME=root
DB_PASSWORD=

# --------------------------------------------
# Redis
# --------------------------------------------
REDIS_HOST=
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_DB=0

# --------------------------------------------
# Cache e Queue
# --------------------------------------------
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

# --------------------------------------------
# Filesystem
# --------------------------------------------
FILESYSTEM_DISK=s3

# --------------------------------------------
# AWS S3 Storage
# --------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=sa-east-1
AWS_BUCKET=carinho-documentos
AWS_URL=
AWS_ENDPOINT=
AWS_USE_PATH_STYLE_ENDPOINT=false
AWS_ENCRYPTION=AES256
AWS_UPLOAD_MAX_SIZE_MB=25
AWS_SIGNED_URL_EXPIRATION=60

# --------------------------------------------
# Token Interno para Comunicação entre Sistemas
# --------------------------------------------
INTERNAL_API_TOKEN=

# --------------------------------------------
# Z-API (WhatsApp)
# --------------------------------------------
ZAPI_BASE_URL=https://api.z-api.io
ZAPI_INSTANCE_ID=
ZAPI_TOKEN=
ZAPI_CLIENT_TOKEN=
ZAPI_WEBHOOK_SECRET=

# --------------------------------------------
# Integrações Internas - URLs e Tokens
# --------------------------------------------
CRM_BASE_URL=https://crm.carinho.com.vc/api
CRM_TOKEN=

CUIDADORES_BASE_URL=https://cuidadores.carinho.com.vc/api
CUIDADORES_TOKEN=


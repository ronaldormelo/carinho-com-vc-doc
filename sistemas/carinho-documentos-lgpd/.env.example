# =============================================================================
# CARINHO DOCUMENTOS E LGPD - Configurações de Ambiente
# =============================================================================
# Copie este arquivo para .env e configure as variáveis conforme seu ambiente.
# =============================================================================

# -----------------------------------------------------------------------------
# APLICAÇÃO
# -----------------------------------------------------------------------------
APP_NAME="Carinho Documentos LGPD"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=https://documentos.carinho.com.vc
APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# BRANDING
# -----------------------------------------------------------------------------
BRAND_NAME="Carinho com Voce"
BRAND_DOMAIN=carinho.com.vc
BRAND_SIGNATURE_NAME="Equipe Carinho"
BRAND_REPLY_TO=contato@carinho.com.vc
DOCUMENTOS_SUBDOMAIN=documentos.carinho.com.vc
DOCUMENTOS_EMAIL_FROM=documentos@carinho.com.vc

# -----------------------------------------------------------------------------
# BANCO DE DADOS
# -----------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=carinho_documentos_lgpd
DB_USERNAME=carinho
DB_PASSWORD=

# -----------------------------------------------------------------------------
# REDIS (Cache e Filas)
# -----------------------------------------------------------------------------
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

# -----------------------------------------------------------------------------
# AWS S3 - ARMAZENAMENTO DE DOCUMENTOS
# -----------------------------------------------------------------------------
# Documentação: https://docs.aws.amazon.com/sdk-for-php/
# Crie um bucket no S3 e configure as credenciais IAM com permissões adequadas.
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=sa-east-1
AWS_BUCKET=carinho-documentos
AWS_URL=
AWS_ENDPOINT=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Configurações de upload
AWS_UPLOAD_MAX_SIZE_MB=25
AWS_ENCRYPTION=AES256
AWS_SIGNED_URL_EXPIRATION=60

# -----------------------------------------------------------------------------
# Z-API - WHATSAPP
# -----------------------------------------------------------------------------
# Documentação: https://developer.z-api.io/
# Crie uma conta em z-api.io e configure uma instância do WhatsApp.
# -----------------------------------------------------------------------------
ZAPI_BASE_URL=https://api.z-api.io
ZAPI_INSTANCE_ID=
ZAPI_TOKEN=
ZAPI_CLIENT_TOKEN=
ZAPI_WEBHOOK_SECRET=

# -----------------------------------------------------------------------------
# TOKEN INTERNO (Comunicação entre sistemas)
# -----------------------------------------------------------------------------
# Gere um token seguro para autenticação entre os sistemas Carinho.
# Use: php -r "echo bin2hex(random_bytes(32));"
# -----------------------------------------------------------------------------
INTERNAL_API_TOKEN=

# -----------------------------------------------------------------------------
# INTEGRAÇÕES INTERNAS - CRM
# -----------------------------------------------------------------------------
CRM_BASE_URL=https://crm.carinho.com.vc/api
CRM_TOKEN=

# -----------------------------------------------------------------------------
# INTEGRAÇÕES INTERNAS - CUIDADORES
# -----------------------------------------------------------------------------
CUIDADORES_BASE_URL=https://cuidadores.carinho.com.vc/api
CUIDADORES_TOKEN=

# -----------------------------------------------------------------------------
# INTEGRAÇÕES INTERNAS - FINANCEIRO
# -----------------------------------------------------------------------------
FINANCEIRO_BASE_URL=https://financeiro.carinho.com.vc/api
FINANCEIRO_TOKEN=

# -----------------------------------------------------------------------------
# INTEGRAÇÕES INTERNAS - ATENDIMENTO
# -----------------------------------------------------------------------------
ATENDIMENTO_BASE_URL=https://atendimento.carinho.com.vc/api
ATENDIMENTO_TOKEN=

# -----------------------------------------------------------------------------
# INTEGRAÇÕES INTERNAS - HUB DE INTEGRAÇÕES
# -----------------------------------------------------------------------------
INTEGRACOES_BASE_URL=https://integracoes.carinho.com.vc/api
INTEGRACOES_TOKEN=

# -----------------------------------------------------------------------------
# EMAIL
# -----------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=documentos@carinho.com.vc
MAIL_FROM_NAME="${APP_NAME}"

EMAIL_FROM=documentos@carinho.com.vc
EMAIL_REPLY_TO=contato@carinho.com.vc

# -----------------------------------------------------------------------------
# DOCUMENTOS - CONFIGURAÇÕES
# -----------------------------------------------------------------------------
# Upload
UPLOAD_MAX_SIZE_MB=25

# URLs assinadas (em minutos)
SIGNED_URL_EXPIRATION=60
CONTRACT_URL_EXPIRATION=1440
SIGNATURE_URL_EXPIRATION=4320

# Assinatura digital
SIGNATURE_DEFAULT_METHOD=otp

# Notificações
NOTIFICATION_DEFAULT_CHANNEL=email

# -----------------------------------------------------------------------------
# LOGS
# -----------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# FILESYSTEM
# -----------------------------------------------------------------------------
FILESYSTEM_DISK=s3

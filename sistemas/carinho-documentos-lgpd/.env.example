CUIDADORES_TIMEOUT=8
FINANCEIRO_TIMEOUT=8
ATENDIMENTO_TIMEOUT=8
INTEGRACOES_TIMEOUT=8

# --------------------------------------------
# Logging
# --------------------------------------------
LOG_CHANNEL=stack
LOG_LEVEL=error

# --------------------------------------------
# Mail (Opcional - se usar envio de email)
